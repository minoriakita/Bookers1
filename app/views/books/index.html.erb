<h1>Bookers</h1>

<% @books.each do |book| %>

  <p>Title</p>
  <span><%= book.title %></span>
  
  <p>Body</p>
  <span><%= book.body%></span>
  
  <span><%= link_to "Show", books_path(book.id) %></span>
	<span><%= link_to "Edit", books_edit_path(book.id) %></span>
	
<% end %>

<h1>Books</h1>
<%= form_with model: @book do |f| %>

<h2>New Book</h2>
<h3>Title</h3>
<%= f.text_field :title %>

<h3>Body</h3>
<%= f.text_area :body %>

<div><%= f.submit 'Create Book' %></div>

<% end %>

